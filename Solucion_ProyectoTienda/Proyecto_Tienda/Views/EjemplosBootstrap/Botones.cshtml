<div class="container mt-5">
    <!-- Card para agrupar los ejemplos -->
    <div class="card">
        <div class="card-header">
            Acciones empresariales
        </div>
        <div class="card-body">
            <!-- Aquí puedes agregar más ejemplos después -->

            <ul class="list-group list-group-flush">
                <!-- Botón para ver reportes -->
                <li class="list-group-item">
                    <button type="button" class="btn btn-link">Ver reportes</button>
                </li>
                <!-- Botón para enviar una solicitud -->
                <li class="list-group-item">
                    <button type="button" class="btn btn-primary">Enviar solicitud</button>
                </li>
                <!-- Botón para revisar presupuesto -->
                <li class="list-group-item">
                    <button type="button" class="btn btn-secondary">Revisar presupuesto</button>
                </li>
                <!-- Botón para aprobar un proyecto -->
                <li class="list-group-item">
                    <button type="button" class="btn btn-success">Aprobar proyecto</button>
                </li>
                <!-- Botón para consultar información -->
                <li class="list-group-item">
                    <button type="button" class="btn btn-info">Consultar información</button>
                </li>
                <!-- Botón para enviar una advertencia -->
                <li class="list-group-item">
                    <button type="button" class="btn btn-warning">Enviar advertencia</button>
                </li>
                <!-- Botón para tomar una acción crítica -->
                <li class="list-group-item">
                    <button type="button" class="btn btn-danger">Tomar acción crítica</button>
                </li>
                <!-- Botón para acciones generales con un tema oscuro -->
                <li class="list-group-item bg-dark">
                    <button type="button" class="btn btn-light">Acción general</button>
                </li>
                <!-- Botón para acciones finales o que cierren procesos -->
                <li class="list-group-item">
                    <button type="button" class="btn btn-dark">Finalizar tarea</button>
                </li>
            </ul>

        </div>
    </div>

    <!-- Card adicional para futuros ejemplos -->
    <div class="card mt-5">
        <div class="card-header">
            Botones con borde
        </div>
        <div class="card-body">
            <ul>
                <li><button type="button" class="btn btn-outline-info">Aprobación Pendiente</button></li>
                <li><button type="button" class="btn btn-outline-secondary">Revisión en Proceso</button></li>
                <li><button type="button" class="btn btn-outline-success">Acción Completada con Éxito</button></li>
                <li><button type="button" class="btn btn-outline-info">Información Adicional Requerida</button></li>
                <li><button type="button" class="btn btn-outline-warning">Advertencia: Acción Necesaria</button></li>
                <li><button type="button" class="btn btn-outline-danger">Peligro: Acción Crítica</button></li>
                <li class="bg-dark p-2"><button type="button" class="btn btn-outline-light">Acción General</button></li>
                <li><button type="button" class="btn btn-outline-dark">Acción Finalizada</button></li>
            </ul>
        </div>
    </div>
    <!-- Card adicional para futuros ejemplos -->
    <div class="card mt-5">
        <div class="card-header">
            Botones con otros tipos de etiquetas html
        </div>
        <div class="card-body">
            <div class="container">
                <div class="mt-5">

                    <!-- Enlaces y botones para acciones empresariales -->
                    <a href="#" class="btn btn-success" role="button">Ver Informe de Resultados</a>
                    <button class="btn btn-info" type="submit">Revisar Plan de Proyecto</button>

                    <!-- Botones de tipo input para acciones -->
                    <input class="btn btn-primary" type="button" value="Abrir Documento">
                    <input class="btn btn-danger" type="submit" value="Enviar Formulario">
                    <input class="btn btn-warning" type="reset" value="Restablecer Formulario">

                    <hr class="m-5">

                    <!-- Botones con diferentes tamaños para acciones empresariales -->
                    <button class="btn btn-info btn-lg" type="submit">Revisar Plan de Proyecto</button>
                    <button class="btn btn-info" type="submit">Revisar Plan de Proyecto</button>
                    <button class="btn btn-info btn-sm" type="submit">Revisar Plan de Proyecto</button>

                    <hr class="m-5">

                    <!-- Botones de gran tamaño y de bloque completo -->
                    <button class="btn btn-info btn-lg btn-block" type="submit">Revisar Presupuesto Anual</button>
                    <button class="btn btn-primary btn-lg btn-block" type="submit">Revisar Proyecciones de Crecimiento</button>

                    <hr class="m-5">

                    <!-- Botón con función toggle para activar/desactivar estados -->
                    <button class="btn btn-primary" type="button" data-toggle="button">Activar Función de Auditoría</button>

                    <hr class="m-5">

                    <!-- Botones con diferentes estados (activo, deshabilitado) -->
                    <button class="btn btn-info" type="button">Generar Reporte Mensual</button>
                    <button class="btn btn-info active" type="button">Generar Reporte Mensual (Activo)</button>
                    <button class="btn btn-info disabled" type="button">Generar Reporte Mensual (Deshabilitado)</button>

                    <hr class="m-5">
                </div>
            </div>
        </div>
    </div>
</div>

