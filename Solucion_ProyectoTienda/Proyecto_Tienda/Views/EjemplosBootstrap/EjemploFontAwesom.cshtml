<div class="container mt-5">
    <h3 class="mb-4">Acciones empresariales</h3>

    <!-- Grupo de botones empresariales con iconos -->
    <div class="btn-group" role="group" aria-label="Acciones empresariales">
        <!-- Botón para enviar un correo -->
        <button type="button" class="btn btn-primary">
            <i class="fas fa-envelope"></i> Enviar Correo
        </button>

        <!-- Botón para descargar un informe -->
        <button type="button" class="btn btn-success">
            <i class="fas fa-download"></i> Descargar Informe
        </button>

        <!-- Botón para acceder a la configuración -->
        <button type="button" class="btn btn-warning">
            <i class="fas fa-cogs"></i> Configuración
        </button>

        <!-- Botón para contactar al soporte técnico -->
        <button type="button" class="btn btn-danger">
            <i class="fas fa-headset"></i> Soporte Técnico
        </button>
    </div>

    <hr class="my-5">

    <!-- Iconos FontAwesome 6 individuales para acciones rápidas -->
    <h4 class="mb-4">Acciones rápidas</h4>
    <div class="row text-center">
        <div class="col">
            <button type="button" class="btn btn-outline-primary">
                <i class="fas fa-user-plus fa-2x"></i>
                <p class="mt-2">Agregar Usuario</p>
            </button>
        </div>
        <div class="col">
            <button type="button" class="btn btn-outline-secondary">
                <i class="fas fa-sync-alt fa-2x"></i>
                <p class="mt-2">Actualizar Datos</p>
            </button>
        </div>
        <div class="col">
            <button type="button" class="btn btn-outline-success">
                <i class="fas fa-chart-line fa-2x"></i>
                <p class="mt-2">Ver Progreso</p>
            </button>
        </div>
        <div class="col">
            <button type="button" class="btn btn-outline-danger">
                <i class="fas fa-trash-alt fa-2x"></i>
                <p class="mt-2">Eliminar</p>
            </button>
        </div>
    </div>
</div>



<footer class="bg-dark py-5 text-muted text-center">
    <div class="container">
        <!-- btn-group-lg -> Mas grande -->
        <div class="btn-group btn-group-lg my-3" role="group" aria-label="footer">

            <!-- FontAwesome 6 icons -->
            <button type="button" class="btn btn-secondary"><i class="fab fa-github"></i></button>
            <button type="button" class="btn btn-secondary"><i class="fab fa-google"></i></button>
            <button type="button" class="btn btn-secondary"><i class="fab fa-twitter"></i></button>
            <button type="button" class="btn btn-secondary"><i class="fab fa-snapchat"></i></button>

        </div>

        <small>
            <p>&copy; 1865 Lewis Carroll</p>
            <p>&ldquo;We’re all mad here.&rdquo; &mdash; Cheshire Cat from <em>Alice in Wonderland</em></p>
        </small>
        <p><img class="img-fluid" src="/images/cat.png" alt="Cheshire Cat"></p>
    </div>
</footer>

