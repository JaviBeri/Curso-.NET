@model List<Producto>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h2 class="my-4 text-center">Lista de Productos</h2>

<table class="table table-striped table-hover table-bordered">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nombre</th>
            <th scope="col">Categoría</th>
            <th scope="col">Precio</th>
            <th scope="col">Detalles</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model)
        {
            <tr>
                <td>@producto.Id</td>
                <td>@producto.Nombre</td>
                <td>@producto.Categoria</td>
                <td>$@producto.Precio.ToString("0.00")</td>
                <td><a class="btn btn-primary" href="/Productos/DetallesProducto/@producto.Id">Ver Detalles</a></td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center">
    <a class="btn btn-success" href="/Productos/NombresProductos">Ver solo nombres de productos</a>
</div>
