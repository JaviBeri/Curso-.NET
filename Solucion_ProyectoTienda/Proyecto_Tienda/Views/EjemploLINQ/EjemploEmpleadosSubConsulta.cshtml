@model IEnumerable<Empleado>

<div class="container mt-5">
    <h2 class="text-center mb-4">Lista de Empleados</h2>

    <!-- Filtro en formato de tarjeta -->
    <div class="card mb-4">
        <div class="card-header">
            Filtro de Empleados
        </div>
        <div class="card-body">
            <p class="card-text">
                Filtro aplicado:
            </p>
            <ul>
                <li>Empleados cuyo último apellido empiece con "V"</li>
                <li>Ejemplo 1: Empleado con apellido "García Vázquez" será incluido</li>
                <li>Ejemplo 2: Empleado con apellido "López" no será incluido</li>
                <li>Ejemplo 3: Empleado con apellido "Martínez Varela" será incluido</li>
            </ul>
        </div>
    </div>

    <!-- Tabla de empleados -->
    <table class="table table-bordered table-hover table-striped">
        <thead class="table-dark">
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Apellido</th>
                <th scope="col">Edad</th>
                <th scope="col">Sueldo</th>
                <th scope="col">Departamento</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="5" class="text-center">No hay empleados disponibles</td>
                </tr>
            }
            else
            {
                @foreach (var empleado in Model)
                {
                    <tr>
                        <td>@empleado.Nombre</td>
                        <td>@empleado.Apellido</td>
                        <td>@empleado.Edad</td>
                        <td>@empleado.Sueldo.ToString("C")</td> <!-- Formateamos el sueldo como moneda -->
                        <td>@empleado.Departamento</td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <!-- Botón para volver -->
    <div class="text-center mt-4">
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Volver al Inicio</a>
    </div>
</div>
