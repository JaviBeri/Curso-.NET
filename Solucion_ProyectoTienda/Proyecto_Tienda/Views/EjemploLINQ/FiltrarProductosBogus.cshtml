@model IEnumerable<Producto>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}



<div class="container mt-5">
    <h2 class="text-center mb-4">Productos Filtrados (Bogus)</h2>

    <!-- Tabla de productos -->
    <table class="table table-bordered table-hover table-striped">
        <thead class="table-dark">
            <tr>
                <th scope="col">Nombre del Producto</th>
                <th scope="col">Precio</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="2" class="text-center">No hay productos que coincidan con el filtro</td>
                </tr>
            }
            else
            {
                @foreach (var producto in Model)
                {
                    <tr>
                        <td>@producto.Nombre</td>
                        <td>@producto.Precio.ToString("C")</td> <!-- Formateamos el precio como moneda -->
                    </tr>
                }
            }
        </tbody>
    </table>

    <!-- Botón para volver -->
    <div class="text-center mt-4">
        <a href="@Url.Action("Index", "Productos")" class="btn btn-primary">Volver a la Lista de Productos</a>
    </div>
</div>