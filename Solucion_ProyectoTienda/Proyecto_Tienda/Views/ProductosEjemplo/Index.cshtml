@model IEnumerable<Producto>

<h1>Lista de Productos</h1>

<a href="@Url.Action("Crear", "ProductosEjemplo")" class="btn btn-primary">Agregar Producto</a>
<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Fecha Agregado</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model)
        {
            <tr>
                <td>@producto.Nombre</td>
                <td>@producto.Precio.ToString("C")</td>
                <td>@producto.FechaAgregado.ToString("g")</td>
            </tr>
        }
    </tbody>
</table>
